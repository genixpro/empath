{
  "manifest_version": 2,
  "name": "Polite Write",
  "version": "0.0.1",
  "description": "An extension to prevent you from sending messages you might regret.",
  "permissions": ["contextMenus"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "logo.png"
  }
}

